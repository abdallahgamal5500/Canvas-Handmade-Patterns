<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/layout"
        android:forceDarkAllowed="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/pen"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tools_pen" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/eraser"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tools_eraser" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/palette"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tools_palette" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_zoom_in_24"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tools_zoom_in" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_zoom_out_24"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tools_zoom_out" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>